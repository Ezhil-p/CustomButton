<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="526dp"
        android:onClick="changeCircleSettings"
        android:text="Changeview" />

    <com.example.mycustombutton.Circle
        android:layout_centerInParent="true"
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:circle_color="#b7f0a5"
        app:label_color="#b3c7cc"
        app:circle_lable="circle"
        app:circle_radius="250"/>
</RelativeLayout>